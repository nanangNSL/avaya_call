<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_landscape" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_title"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:padding="16dp"
        android:layout_marginTop="22dp"
        android:visibility="visible"
        android:src="@drawable/avaya_webrtc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_top"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Call State"
        android:id="@+id/txtcallstate"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:visibility="visible"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_end_call" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:id="@+id/call_elapsed_time"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:text="00:00:00"
        app:layout_constraintTop_toBottomOf="@+id/img_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/dialpad_holder"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/call_button_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_elapsed_time" />



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_end_call"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:background="@drawable/circle_white"
        android:padding="50dp"
        android:visibility="visible"
        android:src="@drawable/ic_call_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        android:layout_marginTop="12dp"
        tools:ignore="MissingConstraints" />




    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_airplay"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/airplay"
        android:padding="12dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_botttom"
        android:layout_marginTop="12dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/call_button_holder"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_botttom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:baselineAligned="true"
        android:layout_marginBottom="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_speaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/baseline_volume_up_72"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="Speaker"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/btn_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/baseline_mic_24"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="Unmuted"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:drawableTop="@drawable/baseline_dialpad_24"
                android:drawablePadding="9dp"
                android:text="Dialpad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_dtmf"
                android:textColor="@color/black"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_botttom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_begin="635dp" />


</androidx.constraintlayout.widget.ConstraintLayout>